[alias]
	dt = difftool
	edit = !git ls-files --modified -z | xargs -0 $EDITOR
	graph = log --date=relative --decorate --graph --oneline
	mt = mergetool
[core]
	editor = $EDITOR
	excludesfile = ~/.gitignore_global
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	cmd = $EDITOR -d "$LOCAL" "$REMOTE" "$MERGED" -c "$wincmd w" -c "wincmd J"
[push]
	default = simple
[user]
	name = Chad Paradis
