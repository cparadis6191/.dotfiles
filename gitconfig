# .gitconfig - Use link.sh to create a symbolic link in $HOME
# Author: Chad Paradis


[alias]
	edit =   !$EDITOR $(git ls-files --modified)
	mmerge = !$EDITOR $(git ls-files --unmerged | rev | cut -f1 | rev | sort -u)
[core]
	editor = $EDITOR
	excludesfile = ~/.gitignore_global
[push]
	default = simple
[user]
	name = Chad Paradis
