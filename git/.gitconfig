[alias]
	dt = difftool
	edit = !$EDITOR $(git diff-files --name-only)
	graph = log --date=relative --decorate --graph --oneline
	maketags = !$(git rev-parse --git-dir)/hooks/tags.sh
	mt = mergetool
	listtags = !git submodule --quiet foreach --recursive git rev-parse --git-dir | awk '{ print \"set tags+=\"$0\"/tags\" }'
[core]
	editor = $EDITOR
	excludesfile = ~/.gitignore_global
	pager = less -+FX
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	path = nvim
[github]
	user = cparadis6191
[init]
	templatedir = ~/.git_template
[merge]
	conflictStyle = diff3
	tool = vimdiff
[mergetool]
	prompt = false
[mergetool "vimdiff"]
	path = nvim
[push]
	default = simple
[user]
	name = Chad Paradis
