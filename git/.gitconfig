[alias]
	dt = difftool
	edit = jump diff
	graph = log --date=relative --decorate --graph --oneline
	listtags = submodule --quiet foreach --recursive 'git rev-parse --git-dir | echo "set tags+=$(cat -)/tags"'
	maketags = !.git/hooks/tags
	mt = mergetool
	twig = branch --sort=-committerdate --verbose
[core]
	editor = $EDITOR
	excludesfile = ~/.gitignore_global
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	path = nvim
[init]
	templatedir = ~/.git_template
[merge]
	conflictStyle = diff3
	tool = vimdiff
[mergetool]
	prompt = false
[mergetool "vimdiff"]
	path = nvim
[push]
	default = simple
[user]
	name = Chad Paradis
