[alias]
	# Usage: git diffref [<ref specifier> [<diff options>]]
	#        git diffref 1 -R
	diffref = !"diffref() { local ref_spec=\"${1:-1}\"; if [ $# -gt 0 ]; then shift; fi; git diff \"$@\" HEAD@{\"$ref_spec\"}..HEAD; }; diffref"
	dt = difftool
	edit = !"edit() { if [ $# -gt 0 ]; then qfvim git quickfix \"$@\"; else git quickfix -h; fi; }; edit"
	graph = log --date=relative --decorate --graph --oneline
	lstags = submodule --quiet foreach --recursive 'echo "set tags+=$(git rev-parse --git-dir)/tags"'
	mktags = !"$(git rev-parse --git-dir)/hooks/tags"
	mt = mergetool
	rifh = rebase --interactive FETCH_HEAD
	twig = branch --sort=-committerdate --verbose
	rmhooks = !"rmhooks() { local hooks=\"$(echo \"$(eval echo \"$(git config --global --get init.templatedir)\")\"/hooks/*)\"; local timestamp=\"$(date +%s)\"; for hook in $hooks; do local local_hook=\"$(git rev-parse --git-dir)/hooks/$(basename \"$hook\")\"; if [ -f \"$local_hook\" ]; then mv \"$local_hook\" \"${local_hook}.${timestamp}.bak\"; fi; done; }; rmhooks"
[core]
	editor = $EDITOR
	excludesfile = ~/.gitignore_global
	pager = diff-highlight | less
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	path = nvim
[init]
	templatedir = ~/.git_template
[merge]
	conflictStyle = diff3
	tool = vimdiff
[mergetool]
	prompt = false
[mergetool "vimdiff"]
	path = nvim
[push]
	default = simple
[user]
	name = Chad Paradis
[include]
	path = ~/.gitconfig.local
