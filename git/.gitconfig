[alias]
	dt = difftool
	edit = !git jump diff
	graph = log --date=relative --decorate --graph --oneline
	maketags = !"$(git rev-parse --git-dir)/hooks/tags.sh"
	mt = mergetool
	listtags = !git submodule --quiet foreach --recursive git rev-parse --git-dir | echo "set tags+=$(cat -)/tags"
[core]
	editor = $EDITOR
	excludesfile = ~/.gitignore_global
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	path = nvim
[init]
	templatedir = ~/.git_template
[merge]
	conflictStyle = diff3
	tool = vimdiff
[mergetool]
	prompt = false
[mergetool "vimdiff"]
	path = nvim
[push]
	default = simple
[user]
	name = Chad Paradis
